<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/grisFondo"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/fondoacercade"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical">


        <ImageView
            android:layout_width="420dp"
            android:layout_height="226dp"
            android:id="@+id/imageView2"
            android:background="@drawable/logoacercade"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Versión 3.6.1"
            android:id="@+id/textView2"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="www.educalinks.com.ec"
        android:id="@+id/buttonLink"
        android:layout_marginTop="40dp"
        android:textColor="#0792f5"
        android:layout_marginRight="120dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/button_selector"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="info@redlinks.com.ec"
        android:id="@+id/buttonCorreo"
        android:layout_marginRight="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="40dp"
        android:textColor="#0792f5"
        android:background="@drawable/button_selector"
        android:layout_gravity="center_horizontal" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Copyright © 2016 Redlinks"
        android:id="@+id/buttonCopyright"
        android:layout_marginRight="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="40dp"
        android:textColor="#0792f5"
        android:background="@drawable/button_selector"
        android:layout_gravity="center_horizontal" />



</LinearLayout>