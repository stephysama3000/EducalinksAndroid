<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.robert.pruebavolley.activity.FacturaFragment"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="COMPROBANTE ELECTRÃ“NICO"
        android:background="@color/azulInicio"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#FAFAFA"
        android:paddingBottom="10dp"
        android:gravity="bottom|center_horizontal"
        android:layout_weight="0.06" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listViewFacturas"
            android:layout_gravity="center_horizontal"
            android:divider="@null"
            android:dividerHeight="0dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/noFacturas"
        android:text="No hay facturas que presentar"
        android:gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:visibility="gone"
        android:textSize="18sp"
        />


</LinearLayout>
