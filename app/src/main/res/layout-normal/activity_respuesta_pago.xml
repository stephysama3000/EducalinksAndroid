<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.robert.pruebavolley.activity.RespuestaPagoActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="PAGO"
        android:textSize="15dp"
        android:background="@color/azulInicio"
        android:textStyle="bold"
        android:textColor="#FAFAFA"
        android:id="@+id/pago"
        android:gravity="bottom|center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBaseline="@+id/pago"
        android:orientation="vertical"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="TRANSACCIÓN EXITOSA"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:id="@+id/exito"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/exitoimg"
            android:layout_marginBottom="50dp"
            android:background="@drawable/successbtn"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="TRANSACCIÓN FALLIDA"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:layout_marginBottom="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:id="@+id/fallo"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="100dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/failbtn1"
            android:id="@+id/falloimg"
            android:visibility="gone"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:id="@+id/totalPagarExit"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:visibility="gone"
            android:id="@+id/layoutFail"
            android:background="@drawable/backgroundpay"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/warning1"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/mensajeFallo"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recibos:"
            android:layout_marginLeft="20dp"
            android:id="@+id/recibos"
            android:textSize="15dp"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listViewRecibos"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_horizontal"
            android:divider="@null"
            android:dividerHeight="0dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/regresar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:text="REGRESAR"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/cornerbutton"
        android:textColor="@android:color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="35dp"/>
</RelativeLayout>
